<Window x:Class="MyFirstWpfApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Song list -->
        <ListBox x:Name="SongsList" DisplayMemberPath="Title" SelectionMode="Single"/>

        <!-- Assign controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="Assign to: " VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="EditorComboBox" Width="180" Margin="0,0,10,0"/>
            <Button Content="Assign" Width="80" Click="AssignSong_Click"/>
            <Button Content="Logout" Width="80" Margin="10,0,0,0" Click="Logout_Click"/>
        </StackPanel>
    </Grid>
</Window>