<Window x:Class="Sims.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Panel" Height="617" Width="1197"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- All Songs -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="All Songs" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <ListBox x:Name="AllSongsList" Height="331" DisplayMemberPath="Title" SelectionMode="Extended"/>
        </StackPanel>

        <!-- Add / Remove Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
            <Button Content="&gt;&gt; Add &gt;&gt;" Width="90" Height="30" Margin="0,0,0,5" Click="AddToPlaylist_Click"/>
            <Button Content="&lt;&lt; Remove &lt;&lt;" Width="90" Height="30" Click="RemoveFromPlaylist_Click"/>
        </StackPanel>

        <!-- Playlists Column -->
        <StackPanel Grid.Column="2">
            <!-- Playlist Controls -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="PlaylistSelector" Width="134" Margin="0,0,10,0"
                          SelectionChanged="PlaylistSelector_SelectionChanged"/>
                <TextBox x:Name="PlaylistNameBox"
                         Width="134"
                         Margin="0,0,10,0"/>
                <Button Content="Rename"
                        Width="80"
                        Click="RenamePlaylist_Click"/>
                <Button Content="New"
                        Width="60"
                        Margin="5,0,0,0"
                        Click="NewPlaylist_Click"/>
                <!-- Delete Playlist button -->
                <Button Content="Delete" Width="60" Margin="5,0,0,0" Click="DeletePlaylist_Click"/>
            </StackPanel>

            <!-- Playlist Songs List -->
            <ListBox x:Name="PlaylistList"
                     Height="319"
                     DisplayMemberPath="Title"
                     SelectionMode="Extended"/>
        </StackPanel>

        <!-- Logout -->
        <Button Content="Logout"
                Width="80"
                Height="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,10,0,0"
                Click="Logout_Click"
                Grid.Column="1"/>
    </Grid>
</Window>
