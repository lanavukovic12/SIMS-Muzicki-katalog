<Window x:Class="MyFirstWpfApp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Panel" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- All Songs -->
        <StackPanel Grid.Column="0">
            <TextBlock Text="All Songs" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <ListBox x:Name="AllSongsList" Height="300" DisplayMemberPath="Title" SelectionMode="Extended"/>
        </StackPanel>

        <!-- Add / Remove Buttons -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
            <Button Content="&gt;&gt; Add &gt;&gt;" Width="90" Height="30" Margin="0,0,0,5" Click="AddToPlaylist_Click"/>
            <Button Content="&lt;&lt; Remove &lt;&lt;" Width="90" Height="30" Click="RemoveFromPlaylist_Click"/>
        </StackPanel>

        <!-- Playlist -->
        <StackPanel Grid.Column="2">
            <TextBlock Text="My Playlist" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <ListBox x:Name="PlaylistList" Height="300" DisplayMemberPath="Title" SelectionMode="Extended"/>
        </StackPanel>

        <!-- Logout -->
        <Button Content="Logout" Width="80" Height="30" HorizontalAlignment="Center"
                VerticalAlignment="Top" Margin="0,294,0,0" Click="Logout_Click" Grid.Column="1"/>
    </Grid>
</Window>